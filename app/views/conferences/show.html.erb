<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @conference.id %>
  <ul>
    <% @conference.messages.order("created_at DESC").map do |message| %>
      <li>text: <%= message.text %></li>
      <li>author: <%= message.user.email %></li>
    <% end %>
  </ul>
</p>
<p>users in this conference</p>
<ul>
  <% @conference.users.map do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>
<strong>send message</strong>
<%= render partial: "send" %>
<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %>
