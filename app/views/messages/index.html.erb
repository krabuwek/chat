<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>
<p>
  <%= link_to 'show users in conference', conference_users_path(conference_id: params[:conference_id]) %>
</p>
<p>
  <%= link_to 'add user', new_conference_user_path(conference_id: params[:conference_id]) %>
</p>
<table style="display:none">
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="2">author</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.text %></td>
        <td><%= message.user.email %></td>
        <% if message.user_id == current_user.id %>
          <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render partial: 'form' %>
<%= paginate @messages %>

